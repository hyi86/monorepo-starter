{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/docs": {
      "entry": ["stories/**/*.stories.{ts,tsx}"],
      "project": [".storybook/**/*.{ts,tsx}", "stories/**/*.{ts,tsx}"]
    },
    "apps/next-full-stack": {
      "entry": ["src/app/**/*.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/shared": {
      "entry": ["src/**/index.ts", "src/**/index.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/ui": {
      "entry": ["src/**/*.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/ui-base": {
      "entry": ["src/**/*.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/utils": {
      "entry": ["src/*.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": [
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/next-env.d.ts",
    "**/vitest.config.ts",
    "**/vitest.workspace.ts",
    "**/tailwind.config.ts",
    "**/postcss.config.mjs",
    "**/next.config.ts",
    "**/playwright.config.ts",
    "**/drizzle.config.ts",
    "**/.storybook/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/public/sw.js",
    "packages/shared/src/hello/**"
  ],
  "ignoreDependencies": [
    "@monorepo-starter/eslint-config",
    "@monorepo-starter/typescript-config",
    "eslint",
    "typescript",
    "tailwindcss",
    "postcss",
    "playwright"
  ],
  "ignoreExportsUsedInFile": true,
  "ignoreWorkspaces": []
}
