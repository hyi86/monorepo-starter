{
  "name": "monorepo-starter",
  "version": "0.1.2",
  "private": true,
  "description": "A modern, production-ready pnpm & turborepo monorepo starter",
  "repository": "https://github.com/hyi86/monorepo-starter",
  "license": "MIT",
  "author": "henry hong <hyi8656@gmail.com>",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "format": "prettier --write",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mdx}": [
      "prettier --write './{apps,packages}/**/*.{js,jsx,ts,tsx,css,mdx}'"
    ]
  },
  "devDependencies": {
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.15.0"
}
