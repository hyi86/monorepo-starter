{
  "name": "monorepo-starter",
  "version": "0.1.1",
  "private": true,
  "description": "A modern, production-ready pnpm & turborepo monorepo starter",
  "repository": "https://github.com/hyi86/monorepo-starter",
  "license": "MIT",
  "author": "henry hong <hyi8656@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "commit": "cz",
    "dev": "turbo run dev",
    "format": "prettier --write",
    "lint": "turbo run lint",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "pnpm format './{apps,packages}/**/*.{js,jsx,ts,tsx,json,css,md,mdx}'"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.14.0"
}
